---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Get first letter of each word for the image text
const initials = title
  .split(' ')
  .map(word => word[0])
  .join('')
  .slice(0, 2)
  .toUpperCase();
---

<div class="w-full h-full bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center">
  <div class="text-center">
    <div class="text-4xl font-serif text-primary/40 mb-2">{initials}</div>
    <div class="px-4">
      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2 font-serif italic">
        "{title}"
      </p>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 